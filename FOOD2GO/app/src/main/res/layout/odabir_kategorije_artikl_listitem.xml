<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/artikl_item_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/artikl_thumbnail"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artikl_ime"
        android:layout_toRightOf="@id/artikl_thumbnail"
        android:text="Artikl"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artikl_cijena"
        android:layout_below="@id/artikl_ime"
        android:layout_toRightOf="@id/artikl_thumbnail"
        android:text="15,00 kn"
        android:textColor="#777777"
        android:textSize="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>