<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/detaljiNarudzbe_item_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/slika"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nazivArtikla"
        android:text="Artikl"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cijenaArtikla"
        android:layout_toRightOf="@id/slika"
        android:text="15,00 kn"
        android:textColor="#777777"
        android:textSize="12dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uikolicinaArtikla"
        android:text="0"
        android:textColor="#777777"
        android:textSize="12dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/slika"
        android:text="Naziv artikla"
        android:textColor="#777777"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/slika"
        android:text="Količina"
        android:textColor="#777777"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/slika"
        android:text="Cijena"
        android:textColor="#777777"
        android:textSize="12dp" />

</RelativeLayout>