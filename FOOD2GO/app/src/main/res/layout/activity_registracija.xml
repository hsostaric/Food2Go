<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFFF"
    tools:context=".controller.RegistracijaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registracija"
                android:textColor="#6E7498"
                android:textSize="40dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="85dp"
                android:fontFamily="casual"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="Ime" />

            <EditText
                android:id="@+id/uiInputIme"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="Prezime" />

            <EditText
                android:id="@+id/uiInputPrezime"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="E-mail" />

            <EditText
                android:id="@+id/uiInputEmail"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="Korisničko ime" />

            <EditText
                android:id="@+id/uiKorisnickoIme"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="Lozinka" />

            <EditText
                android:id="@+id/uiInputLozinka"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="Adresa" />

            <EditText
                android:id="@+id/uiInputAdresa"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="OIB" />

            <EditText
                android:id="@+id/uiInputOib"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:text="Broj mobitela" />

            <EditText
                android:id="@+id/uiInputBrojMobitela"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/registriraj"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="#6E7498"
                android:text="Registriraj se"
                android:textColor="#FFFF" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>